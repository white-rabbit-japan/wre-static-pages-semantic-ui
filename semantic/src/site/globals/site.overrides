            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            border-radius: 50px;
          }
          .social-icon {
            position: absolute;
            bottom: 0;
            right: 0;
            background: @green;
            color: @white;
            width: 29px;
            height: 29px;
            font-size: 20px;
            line-height: 29px;
            text-align: center;
            border-radius: 30px;
            .icon {
              margin: 0;
            }
          }
        }

        .info {
          .name {
            font-weight: bold;
            margin-bottom: 6px;
          }
        }
      }

      .text {
        font-size: 15px;
        line-height: 1.73;
      }
    }

    .ui.button.huge {
      font-size: 18px;
      font-weight: bold;
      letter-spacing: 0.7px;
      margin-top: 30px;
    }

    .testimonial-card.rotated-left {
      transform: rotate(-1deg);
      .testimonial-content {
        transform: rotate(1deg);
      }
    }

    .testimonial-card.rotated-right {
      transform: rotate(1deg);
      .testimonial-content {
        transform: rotate(-1deg);
      }
    }
  }

  @media (max-width: @computerBreakpoint) {
    .testimonials {
      h2 {
        img {
          display: block;
          margin: -12px auto 12px;
        }
      }
    }
  }


